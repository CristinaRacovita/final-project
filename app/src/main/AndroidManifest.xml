<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviepicker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviePicker">
        <activity android:name=".presentation.activity.GroupActivity"></activity>
        <activity android:name=".presentation.activity.ReviewWatchedMovieActivity" />
        <activity
            android:name=".presentation.activity.ChooseMoviesActivity"
            android:theme="@style/Theme.AuthenticateFullscreen"></activity>
        <activity android:name=".presentation.activity.RateMoviesActivity" />
        <activity
            android:name=".presentation.activity.RegisterActivity"
            android:theme="@style/Theme.AuthenticateFullscreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".presentation.activity.SplashActivity"
            android:theme="@style/Theme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.SignInActivity"
            android:theme="@style/Theme.AuthenticateFullscreen"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".presentation.activity.MainActivity" />

